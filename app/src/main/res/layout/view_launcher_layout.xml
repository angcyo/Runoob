<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/base_hdpi"
            android:text="老板说:"
            android:textSize="30sp"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/base_hdpi"
            android:text="姿势要帅,"
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="技术要好."
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/base_hdpi"
            android:text="软件体验要棒."
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="@dimen/base_hdpi"
            android:text="这个,那个要流畅."
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/base_hdpi"
            android:text="不要怕,"
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="@dimen/base_hdpi"
            android:text="现在开始."
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/base_hdpi"
            android:text="听老板的话."
            android:textSize="30sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/r4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/base_50dpi"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="@dimen/base_hdpi"
            android:text="好好学习吧."
            android:textSize="30sp"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_xxxhdpi"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/base_xhdpi"
        android:gravity="center"
        android:padding="@dimen/base_ldpi"
        android:text="开启学习之旅"
        android:textColor="@color/base_white"
        android:visibility="invisible"/>
</RelativeLayout>
